<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="baseTextStyle">@style/SampleTextStyle</item>
        <item name="baseImageStyle">@style/SampleImageStyle</item>
        <item name="baseEditTextStyle">@style/SampleEditTextStyle</item>
    </style>

    <style name="SampleTextStyle" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SampleImageStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SampleEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
